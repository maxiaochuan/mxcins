{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "dev:webapi": "pnpm run -r --filter webapi dev",
    "dev:hooks": "pnpm run -r --filter hooks dev",
    "dev:components": "pnpm run -r --filter components dev",
    "dev:site": "pnpm run -r --filter site dev",
    "clean": "run-s clean:**",
    "clean:res:webapi": "pnpm run -r --filter webapi clean",
    "clean:res:hooks": "pnpm run -r --filter hooks clean",
    "clean:res:components": "pnpm run -r --filter components clean",
    "format": "run-s format:**",
    "format:res:webapi": "yarn workspace @mxcins/webapi run rescript format -all",
    "format:res:hooks": "yarn workspace @mxcins/hooks run rescript format -all",
    "format:res:components": "yarn workspace @mxcins/components run rescript format -all",
    "icons": "node scripts/icons.cjs",
    "prettier": "prettier --write '**/*.{json,ts,tsx,js,jsx}'",
    "publish": "lerna publish from-git",
    "version": "lerna version --conventional-commits --yes",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@ant-design/icons": "4.7.0",
    "@rescript/react": "0.10.3",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rescript": "10.0.1",
    "twind": "0.16.17"
  },
  "devDependencies": {
    "@storybook/addon-actions": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/addon-interactions": "6.5.13",
    "@storybook/addon-links": "6.5.13",
    "@storybook/builder-vite": "0.2.5",
    "@storybook/react": "6.5.13",
    "@storybook/testing-library": "0.0.13",
    "@vitejs/plugin-react": "2.2.0",
    "gentype": "4.5.0",
    "lerna": "6.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "react-router": "6.4.2",
    "react-router-dom": "6.4.2",
    "typescript": "4.8.4",
    "vite": "3.2.2"
  }
}
