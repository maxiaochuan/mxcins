{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite dev",
    "dev:res": "run-s dev:rescript:**",
    "dev:res:webapi": "yarn workspace @mxcins/webapi run rescript build -w",
    "dev:res:hooks": "yarn workspace @mxcins/hooks run rescript build -w",
    "dev:res:components": "yarn workspace @mxcins/components run rescript build -w",
    "clean": "run-s clean:**",
    "clean:res:webapi": "yarn workspace @mxcins/webapi run rescript clean",
    "clean:res:hooks": "yarn workspace @mxcins/hooks run rescript clean",
    "clean:res:components": "yarn workspace @mxcins/components run rescript clean",
    "format": "run-s format:**",
    "format:res:webapi": "yarn workspace @mxcins/webapi run rescript format -all",
    "format:res:hooks": "yarn workspace @mxcins/hooks run rescript format -all",
    "format:res:components": "yarn workspace @mxcins/components run rescript format -all",
    "build": "run-s build:**",
    "build:res:webapi": "yarn workspace @mxcins/webapi run rescript build",
    "build:res:hooks": "yarn workspace @mxcins/hooks run rescript build",
    "build:res:components": "yarn workspace @mxcins/components run rescript build",
    "icons": "node scripts/icons.cjs",
    "prettier": "prettier --write 'src/**/*.tsx' 'packages/vite-plugin-routes/**/*.{ts,js}' 'packages/components/**/index.ts' 'packages/components/src/shims/*.ts'",
    "publish": "lerna publish from-git",
    "version": "lerna version --conventional-commits --yes"
  },
  "dependencies": {
    "@ant-design/icons": "4.7.0",
    "@rescript/react": "0.10.3",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.13",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rescript": "9.1.4",
    "twind": "0.16.16"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "1.2.0",
    "prettier": "2.5.1",
    "gentype": "4.3.0",
    "lerna": "4.0.0",
    "npm-run-all": "4.1.5",
    "react-router": "^6.2.2",
    "react-router-dom": "^6.2.2",
    "typescript": "^4.6.2",
    "vite": "2.8.6"
  }
}
